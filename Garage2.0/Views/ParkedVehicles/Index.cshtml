@model IEnumerable<Garage2._0.Models.ParkedVehicle>

@{
    ViewBag.Title = "Index";
}

<h2>Vehicles Information</h2>
<p>
    @Html.ActionLink("Park", "Create")
</p>

@using (Html.BeginForm())
{
<div class="form-group"><label for="exampleFormControlInput1">Enter Registration Number/Type or Color:</label>
   
         @Html.TextBox("SearchString")

        <input type="submit" value="Search" class="btn btn-default" />
    
</div>
    }

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("type", "Index", new { sortOrder = ViewBag.typeSortParm })
            @*@Html.DisplayNameFor(model => model.type)*@
        </th>
        <th>
            @Html.ActionLink("RegistrationNumber", "Index", new { sortOrder = ViewBag.NameSortParm })

            @*@Html.DisplayNameFor(model => model.RegistrationNumber)*@
        </th>
        <th>
            @Html.ActionLink("Color", "Index", new { sortOrder = ViewBag.ColorSortParm })
            @*@Html.DisplayNameFor(model => model.Color)*@
        </th>
        <th>
            @Html.ActionLink("Brand", "Index", new { sortOrder = ViewBag.BrandSortParm })

            @*@Html.DisplayNameFor(model => model.Brand)*@
        </th>
        <th>
            @Html.ActionLink("Model", "Index", new { sortOrder = ViewBag.ModelSortParm })

            @*@Html.DisplayNameFor(model => model.Model)*@
        </th>
        <th>
            @Html.ActionLink("NoOfWheels", "Index", new { sortOrder = ViewBag.NoOfWheelsSortParm })

            @*@Html.DisplayNameFor(model => model.NoOfWheels)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfWheels)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Check out", "Delete", new { id = item.Id })
        </td>
    </tr>
    }

</table>
